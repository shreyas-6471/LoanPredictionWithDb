<html>
    <head>
        <style>
           html,
body {
  height: 100%;
}

body {
  display: flex;
  justify-content: center;
  align-items: center;
  background-size: cover;
  background-attachment: fixed;
  padding: 0;
}

table { border-collapse: collapse;  border-spacing: 0;  width: 80%;
  margin-bottom: 1em;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

th,
td {
  text-align: center;
  padding: 12px;
}

th {
  background-color: #007bff;
  color: #fff;
  text-transform: uppercase;
  font-size: 14px;
  letter-spacing: 1px;
}

td {
  font-size: 14px;
}

tr:hover {
  background-color: #ebebeb;
}

tr:nth-child(even) {
  background-color: #d5d5d5;
}

@media only screen and (max-width: 600px) {
  td:before {
    content: attr(data-label);
    float: left;
    font-weight: bold;
    text-transform: uppercase;
  }

  td {
    display: block;
    text-align: right;
    position: relative;
    padding-left: 50%;
  }

  td::before {
    position: absolute;
    left: 0;
  }
}

          </style>
          
    </head>
    <body>
        <table>
    <tr>
   <th> Loan Amount </th>
   <th> Annual Income</th>
   <th> Monthly Debt </th>
   <th>Years of Credit History </th> 
   <th> Number of Open Accounts</th>
    <th> Current Credit Balance</th>
    <th>  Maximum Open Credit </th>
    <th> Years in current job </th>
     <th> Home Ownership </th>
     <th>  Purpose </th>
    <th> Number of Credit Problems </th>
    <th> Bankruptcies </th>
    <th> Tax Liens </th>
    <th> Credit Ranges </th>
    <th>Predicted Loan Status </th>
            </tr>
            <% for (let i = 1; i < customers.length; i++) { %>
              <tr>
                <td><%= customers[i].amount %></td>
                <td><%= customers[i].income %></td>
                <td><%= customers[i].debt %></td>
                <td><%= customers[i].history %></td>
                <td><%= customers[i].accounts %></td>
                <td><%= customers[i].balance %></td>
                <td><%= customers[i].maxcredit %></td>
                <td><%= customers[i].job %></td>
                <td><%= customers[i].home %></td>
                <td><%= customers[i].purpose %></td>
                <td><%= customers[i].problems %></td>
                <td><%= customers[i].bankruptcies %></td>
                <td><%= customers[i].taxliens %></td>
                <td><%= customers[i].creditranges %></td>
                <td><%= customers[i].predictedloanstatus %></td>
              </tr>
            <% } %>
          </table>
    </body>
</html>